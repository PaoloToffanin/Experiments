function options = nva_options

    options.noise = 1; % play stimuli with noise (1) yes or (0) not
    % note: stimuli with noise means:
    % no noise noise at 10db dif, 5 dB dif, and 0 dB difference
%     options.TMR = [0 5 10];
%     rng('shuffle')
    options.TMR = [Inf 10 5 0]; % starts with no noise
%     rng('shuffle')
%     options.TMR = options.TMR(randperm(length(options.TMR)));
    options.attenuation_dB = 0;

end